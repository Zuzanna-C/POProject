<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Properties>
		<Property name="path">./logs</Property>
	</Properties>


	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d %-5level %logger{36}.%-5M %msg%n" />
		</Console>
		
		<File name="chatgptlog" fileName="${path}/chatgpt.log">
			<PatternLayout>
				<pattern>%d %-5level %logger{36}.%-5M %msg%n</pattern>
			</PatternLayout>
		</File>
	</Appenders>

	<Loggers>
		<!--For package chatgpt-->
		<Logger name="chatgpt" level="info" additivity="false">
			<AppenderRef ref="chatgptlog"/>
			
		</Logger>

		<Root level="error">
			<AppenderRef ref="Console" />
		</Root>
	</Loggers>

</Configuration>